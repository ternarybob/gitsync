# GitSync Environment Variables
# Copy this file to .env and update the values

# Service Configuration
SERVICE_NAME=gitsync
ENVIRONMENT=development

# Git Authentication
GIT_USERNAME=your-git-username
GIT_TOKEN=your-personal-access-token
GIT_EMAIL=your-email@example.com

# GitHub Configuration
GITHUB_TOKEN=your-github-token

# GitLab Configuration
GITLAB_TOKEN=your-gitlab-token

# Bitbucket Configuration
BITBUCKET_TOKEN=your-bitbucket-token

# Repository Configuration
MAIN_SERVICE_SOURCE=https://github.com/your-org/main-service.git
MAIN_SERVICE_TARGET=https://gitlab.com/your-org/main-service.git

BACKUP_SOURCE=https://github.com/your-org/backup-repo.git
BACKUP_TARGET=https://backup.example.com/backup-repo.git
BACKUP_USERNAME=backup-user
BACKUP_TOKEN=backup-token
BACKUP_EMAIL=backup@example.com

# SSH Configuration (alternative to tokens)
SSH_KEY_PATH=/path/to/your/ssh/key
SSH_KEY_PASSPHRASE=your-ssh-passphrase

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Database
STORE_PATH=./data/gitsync.db